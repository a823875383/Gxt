<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Translucent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="radio_navigation_bar_bottom_tab">
        <item name="android:button">@null</item>
        <item name="android:textSize">@dimen/font_size_10sp</item>
        <item name="android:textColor">@drawable/tab_color</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">@dimen/off_5dp</item>
        <item name="android:paddingBottom">@dimen/off_5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="div_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/div_tab</item>
    </style>

    <style name="WrapStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MWStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WMStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="EditStyle" parent="MWStyle">
        <item name="android:textColorHint">@color/font_hint</item>
    </style>

    <style name="BlackText" parent="WrapStyle">
        <item name="android:textColor">@color/font_black</item>
    </style>

    <style name="GrayText" parent="WrapStyle">
        <item name="android:textColor">@color/font_gray</item>
    </style>

    <style name="LightText" parent="WrapStyle">
        <item name="android:textColor">@color/font_light</item>
    </style>

    <style name="WhiteText" parent="WrapStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TitleText" parent="BlackText">
        <item name="android:textSize">@dimen/font_size_18sp</item>
    </style>

</resources>
