<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/off_10dp">

        <ImageView
            android:id="@+id/iv_bank_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/bank_icbc" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/off_20dp"
            android:layout_toRightOf="@+id/iv_bank_icon"
            android:orientation="vertical">

            <TextView
                style="@style/BlackText"
                android:text="中国工商银行" />

            <TextView
                style="@style/GrayText"
                android:layout_marginTop="@dimen/off_8dp"
                android:text="尾号2015 储蓄卡"
                android:textSize="@dimen/font_size_12sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_ok" />
    </RelativeLayout>

    <View
        style="@style/div_style"
        android:layout_marginLeft="@dimen/off_10dp"
        android:layout_marginRight="@dimen/off_10dp" />

</LinearLayout>
