<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/off_5dp"
        android:layout_marginTop="@dimen/off_5dp"
        android:src="@mipmap/ic_close" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/off_20dp"
        android:paddingLeft="@dimen/off_15dp"
        android:paddingRight="@dimen/off_15dp"
        android:paddingTop="@dimen/off_8dp">

        <TextView
            style="@style/BlackText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/return_disagree" />

        <EditText
            android:id="@+id/et_reason"
            style="@style/EditStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/off_100dp"
            android:layout_marginTop="@dimen/off_5dp"
            android:background="@drawable/rect_white"
            android:gravity="top"
            android:hint="请输入不同意退货理由"
            android:padding="@dimen/off_5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/off_40dp"
        android:weightSum="2">

        <Button
            android:id="@+id/bt_submit"
            style="@style/WhiteText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/green"
            android:text="@string/submit"
            android:textSize="@dimen/font_size_18sp" />

        <Button
            android:id="@+id/bt_cancel"
            style="@style/WhiteText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/gray"
            android:text="@string/cancel"
            android:textSize="@dimen/font_size_18sp" />
    </LinearLayout>
</LinearLayout>
