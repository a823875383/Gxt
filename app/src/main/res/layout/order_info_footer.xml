<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blank"
    android:orientation="vertical">

    <View
        style="@style/div_style"
        android:layout_marginTop="@dimen/off_10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/off_10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/GrayText"
                android:text="商品总价" />

            <TextView
                android:id="@+id/tv_merchandise_total"
                style="@style/BlackText"
                android:layout_alignParentRight="true"
                android:text="￥ 180.00" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/off_10dp">

            <TextView
                style="@style/GrayText"
                android:text="订单总价" />

            <TextView
                android:id="@+id/tv_order_total"
                style="@style/BlackText"
                android:layout_alignParentRight="true"
                android:text="￥ 180.00" />
        </RelativeLayout>
    </LinearLayout>

    <View style="@style/div_style" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/off_10dp">

        <TextView
            style="@style/GreenText"
            android:text="实付款"
            android:textSize="@dimen/font_size_18sp" />

        <TextView
            android:id="@+id/tv_pay_total"
            style="@style/GreenText"
            android:layout_alignParentRight="true"
            android:text="￥ 180.00"
            android:textSize="@dimen/font_size_18sp" />
    </RelativeLayout>

    <View style="@style/div_style" />

    <View
        style="@style/div_style"
        android:layout_marginTop="@dimen/off_10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/off_10dp">

        <TextView
            android:id="@+id/tv_order_date_01"
            style="@style/LightText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单创建时间 : " />

        <TextView
            android:id="@+id/tv_order_date_02"
            style="@style/LightText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/off_10dp"
            android:text="付款时间 : " />

        <TextView
            android:id="@+id/tv_order_date_03"
            style="@style/LightText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/off_10dp"
            android:text="发货时间 : " />

        <TextView
            android:id="@+id/tv_order_date_04"
            style="@style/LightText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/off_10dp"
            android:text="成交时间 : " />
    </LinearLayout>
</LinearLayout>
