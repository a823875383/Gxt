<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_order_pay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blank"
    android:orientation="vertical"
    tools:context="com.jsqix.gxt.app.activity.OrderPay">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/off_10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/off_40dp">

            <TextView
                style="@style/BlackText"
                android:layout_centerVertical="true"
                android:text="@string/real_money" />

            <TextView
                android:id="@+id/tv_money"
                style="@style/BlackText"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="¥ 697.00" />
        </RelativeLayout>

        <View style="@style/div_style" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/off_40dp">

            <TextView
                style="@style/BlackText"
                android:layout_centerVertical="true"
                android:text="@string/order_no" />

            <TextView
                android:id="@+id/tv_order_no"
                style="@style/BlackText"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="12345678909865" />
        </RelativeLayout>

        <View style="@style/div_style" />

        <TextView
            style="@style/LightText"
            android:layout_height="@dimen/off_40dp"
            android:gravity="center_vertical"
            android:text="@string/order_depict" />

        <TextView
            android:id="@+id/tv_depict"
            style="@style/GrayText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_gray"
            android:gravity="top"
            android:padding="@dimen/off_10dp"
            android:text="爱多久都五福if一起几点去鸡起舞几千几千加强纪委集切切我偶企鹅哦穷奇诶哦亲穷而且" />

        <View
            style="@style/div_style"
            android:layout_marginTop="@dimen/off_10dp" />
    </LinearLayout>

    <TextView
        style="@style/GreenText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/off_40dp"
        android:gravity="center_vertical"
        android:padding="@dimen/off_10dp"
        android:text="@string/pay_away" />

    <View style="@style/div_style" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rel_balance"
            android:layout_width="match_parent"
            android:layout_height="@dimen/off_40dp"
            android:padding="@dimen/off_10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true">

                <TextView
                    style="@style/BlackText"
                    android:text="@string/pay_balance" />

                <TextView
                    style="@style/LightText"
                    android:layout_marginLeft="@dimen/off_5dp"
                    android:text="@string/balance_available"
                    android:textSize="@dimen/font_size_12sp" />
            </LinearLayout>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_arrow" />
        </RelativeLayout>

        <View style="@style/div_style" />

        <RelativeLayout
            android:id="@+id/rel_online"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/off_10dp">

            <TextView
                style="@style/BlackText"
                android:text="@string/pay_online" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_arrow" />
        </RelativeLayout>

        <View style="@style/div_style" />
    </LinearLayout>

</LinearLayout>
