<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blank"
    tools:context=".activity.LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@mipmap/login_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/off_20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_white"
            android:paddingBottom="@dimen/off_5dp"
            android:paddingLeft="@dimen/off_10dp"
            android:paddingRight="@dimen/off_10dp"
            android:paddingTop="@dimen/off_5dp">

            <EditText
                style="@style/EditStyle"
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/off_35dp"
                android:background="@null"
                android:drawableLeft="@mipmap/ic_name"
                android:drawablePadding="@dimen/off_5dp"
                android:hint="@string/login_name"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:maxLength="11"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/off_15dp"
            android:background="@drawable/round_white"
            android:paddingBottom="@dimen/off_5dp"
            android:paddingLeft="@dimen/off_10dp"
            android:paddingRight="@dimen/off_10dp"
            android:paddingTop="@dimen/off_5dp">

            <EditText
                style="@style/EditStyle"
                android:id="@+id/et_pass"
                android:layout_width="match_parent"
                android:layout_height="@dimen/off_35dp"
                android:background="@null"
                android:drawableLeft="@mipmap/ic_pass"
                android:drawablePadding="@dimen/off_5dp"
                android:hint="@string/login_pass"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/off_15dp"
            android:background="@drawable/round_white">

            <EditText
                style="@style/EditStyle"
                android:id="@+id/et_code"
                android:layout_width="0dp"
                android:layout_height="@dimen/off_35dp"
                android:layout_marginBottom="@dimen/off_5dp"
                android:layout_marginLeft="@dimen/off_10dp"
                android:layout_marginTop="@dimen/off_5dp"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@mipmap/ic_code"
                android:drawablePadding="@dimen/off_5dp"
                android:hint="@string/login_code"
                android:imeOptions="actionDone"
                android:singleLine="true" />

            <LinearLayout
                android:layout_width="@dimen/off_100dp"
                android:layout_height="match_parent"
                android:background="@drawable/round_light_green">

                <ImageView
                    android:id="@+id/iv_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            style="@style/GrayText"
            android:id="@+id/tv_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/off_10dp"
            android:text="@string/login_forget" />

        <Button
            style="@style/WhiteText"
            android:id="@+id/bt_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/off_10dp"
            android:layout_marginTop="@dimen/off_10dp"
            android:background="@drawable/round_green"
            android:text="@string/login_button"
            android:textSize="@dimen/font_size_18sp" />
    </LinearLayout>

</RelativeLayout>
