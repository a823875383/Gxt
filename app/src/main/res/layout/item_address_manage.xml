<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blank"
    android:orientation="vertical">

    <View
        style="@style/div_style"
        android:layout_marginTop="@dimen/off_10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_address_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/off_20dp"
                android:paddingLeft="@dimen/off_15dp"
                android:paddingRight="@dimen/off_15dp"
                android:paddingTop="@dimen/off_20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/off_15dp"
                    android:layout_toLeftOf="@+id/lin_right"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_name"
                            style="@style/BlackText"
                            android:text="周杰伦" />

                        <TextView
                            android:id="@+id/tv_sex"
                            style="@style/BlackText"
                            android:layout_marginLeft="@dimen/off_10dp"
                            android:text="先生" />

                        <TextView
                            android:id="@+id/tv_phone"
                            style="@style/BlackText"
                            android:layout_marginLeft="@dimen/off_10dp"
                            android:text="13012345678" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_address"
                        style="@style/LightText"
                        android:layout_marginTop="@dimen/off_10dp"
                        android:text="江苏省苏州市工业园区创意产业园动漫大厦8栋7楼" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center">

                    <View
                        style="@style/div_style"
                        android:layout_width="1dp"
                        android:layout_height="@dimen/off_42dp" />

                    <ImageView
                        android:id="@+id/iv_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/off_10dp"
                        android:src="@mipmap/ic_address_edit" />
                </LinearLayout>
            </RelativeLayout>

            <View style="@style/div_style" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/off_10dp"
                android:paddingLeft="@dimen/off_15dp"
                android:paddingTop="@dimen/off_10dp">

                <CheckBox
                    android:id="@+id/cb_choose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/address_choose"
                    android:checked="true" />

                <TextView
                    style="@style/BlackText"
                    android:layout_marginLeft="@dimen/off_10dp"
                    android:text="@string/set_default" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <View style="@style/div_style" />

</LinearLayout>
